{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "g++",
            "args": [
                "-Wall",
                "-g",
                "-I",
                "header",
                "${workspaceFolder}/source/main.cpp",
                "${workspaceFolder}/source/window.cpp",
                "${workspaceFolder}/header/window.h",
                "${workspaceFolder}/source/entity.cpp",
                "${workspaceFolder}/header/entity.h",
                "${workspaceFolder}/source/input.cpp",
                "${workspaceFolder}/header/input.h",
                "${workspaceFolder}/source/observer.cpp",
                "${workspaceFolder}/header/observer.h",
                "${workspaceFolder}/source/sprite.cpp",
                "${workspaceFolder}/header/sprite.h",
                "${workspaceFolder}/source/map.cpp",
                "${workspaceFolder}/header/map.h",
                "${workspaceFolder}/source/maprenderer.cpp",
                "${workspaceFolder}/header/maprenderer.h",
                "${workspaceFolder}/source/ivec2.cpp",
                "${workspaceFolder}/header/ivec2.h",
                "${workspaceFolder}/source/fvec2.cpp",
                "${workspaceFolder}/header/fvec2.h",
                "${workspaceFolder}/source/region.cpp",
                "${workspaceFolder}/header/region.h",
                "${workspaceFolder}/source/gamemanager.cpp",
                "${workspaceFolder}/header/gamemanager.h",
                "${workspaceFolder}/source/raycaster.cpp",
                "${workspaceFolder}/header/raycaster.h",
                "${workspaceFolder}/header/constants.h",
                "-w",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
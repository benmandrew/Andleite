{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/source/main.cpp",
                "${workspaceFolder}/source/window.cpp",
                "${workspaceFolder}/source/window.h",
                "${workspaceFolder}/source/creature.cpp",
                "${workspaceFolder}/source/creature.h",
                "${workspaceFolder}/source/input.cpp",
                "${workspaceFolder}/source/input.h",
                "${workspaceFolder}/source/observer.cpp",
                "${workspaceFolder}/source/observer.h",
                "-w",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}